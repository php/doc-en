 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Removes all extended attributes of a file</title>
    <programlisting role="php">
<![CDATA[
<?php
$file = 'some_file';
$attributes = xattr_list($file);

foreach ($attributes as $attr_name) {
    xattr_remove($file, $attr_name);
}
?>
]]>
    </programlisting>
   </example>
