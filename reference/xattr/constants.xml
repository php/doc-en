<appendix xml:id="xattr.constants" xmlns="http://docbook.org/ns/docbook">
 &reftitle.constants;
 &extension.constants;
 <variablelist>
  <varlistentry xml:id="constant.xattr-root">
   <term>
    <constant>XATTR_ROOT</constant> 
    (<type>int</type>)
   </term>
   <listitem>
    <simpara>
     Set attribute in root (trusted) namespace. Requires root privileges.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry xml:id="constant.xattr-dontfollow">
   <term>
    <constant>XATTR_DONTFOLLOW</constant> 
    (<type>int</type>)
   </term>
   <listitem>
    <simpara>
     Do not follow the symbolic link but operate on symbolic link itself.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry xml:id="constant.xattr-create">
   <term>
    <constant>XATTR_CREATE</constant> 
    (<type>int</type>)
   </term>
   <listitem>
    <simpara>
     Function will fail if extended attribute already exists.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry xml:id="constant.xattr-replace">
   <term>
    <constant>XATTR_REPLACE</constant> 
    (<type>int</type>)
   </term>
   <listitem>
    <simpara>
     Function will fail if extended attribute doesn't exist.
    </simpara>
   </listitem>
  </varlistentry>
 </variablelist>
</appendix>

