<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="function.sodium-crypto-core-ristretto255-scalar-invert" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>sodium_crypto_core_ristretto255_scalar_invert</refname>
  <refpurpose>Inverts a scalar value</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>sodium_crypto_core_ristretto255_scalar_invert</methodname>
   <methodparam><type>string</type><parameter>s</parameter></methodparam>
  </methodsynopsis>
  <para>
   Inverts a scalar value.
   Available as of libsodium 1.0.18.
  </para>

  &warn.undocumented.func;
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>s</parameter></term>
    <listitem>
     <para>
      Scalar value.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns a 32-byte random &string;.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>sodium_crypto_core_ristretto255_scalar_invert</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php

$foo = sodium_crypto_core_ristretto255_scalar_random();

$inverted = sodium_crypto_core_ristretto255_scalar_invert($foo);
$reInverted = sodium_crypto_core_ristretto255_scalar_invert($inverted);

var_dump(hash_equals($foo, $reInverted));
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
bool(true) 
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>sodium_crypto_core_ristretto255_scalar_random</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
