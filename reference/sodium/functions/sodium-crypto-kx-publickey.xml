<refentry xml:id="function.sodium-crypto-kx-publickey" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>sodium_crypto_kx_publickey</refname>
  <refpurpose>Extract the public key from a crypto_kx keypair</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>sodium_crypto_kx_publickey</methodname>
   <methodparam><type>string</type><parameter>key_pair</parameter></methodparam>
  </methodsynopsis>
  <para>
   Extract the public key from a crypto_kx keypair.
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>key_pair</parameter></term>
    <listitem>
     <para>
      X25519 keypair, such as one generated by
      <function>sodium_crypto_kx_keypair</function>.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   X25519 public key.
  </para>
 </refsect1>


</refentry>
