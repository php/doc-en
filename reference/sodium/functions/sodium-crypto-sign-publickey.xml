<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="function.sodium-crypto-sign-publickey">
 <refnamediv>
  <refname>sodium_crypto_sign_publickey</refname>
  <refpurpose>Extract the Ed25519 public key from a keypair</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>sodium_crypto_sign_publickey</methodname>
   <methodparam><modifier role="attribute">#[\SensitiveParameter]</modifier><type>string</type><parameter>key_pair</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   Extract the Ed25519 public key from a keypair
  </simpara>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>key_pair</parameter></term>
    <listitem>
     <simpara>
      Ed25519 keypair (see: <function>sodium_crypto_sign_keypair</function>)
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   Ed25519 public key
  </simpara>
 </refsect1>


</refentry>
