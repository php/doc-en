<refentry xml:id="function.sodium-crypto-kdf-keygen" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>sodium_crypto_kdf_keygen</refname>
  <refpurpose>Generate a random root key for the KDF interface</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>sodium_crypto_kdf_keygen</methodname>
   <void />
  </methodsynopsis>
  <para>
   Generates a random key suitable for serving as the root key for <function>sodium_crypto_kdf_derive_from_key</function>.
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   A random 256-bit key.
  </para>
 </refsect1>


</refentry>

