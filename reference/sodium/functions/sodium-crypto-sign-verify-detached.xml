<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="function.sodium-crypto-sign-verify-detached">
 <refnamediv>
  <refname>sodium_crypto_sign_verify_detached</refname>
  <refpurpose>Verify signature for the message</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>sodium_crypto_sign_verify_detached</methodname>
   <methodparam><type>string</type><parameter>signature</parameter></methodparam>
   <methodparam><type>string</type><parameter>message</parameter></methodparam>
   <methodparam><type>string</type><parameter>public_key</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   Verify signature for the message
  </simpara>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>signature</parameter></term>
    <listitem>
     <simpara>
      The cryptographic signature obtained from <function>sodium_crypto_sign_detached</function>
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>message</parameter></term>
    <listitem>
     <simpara>
      The message being verified
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>public_key</parameter></term>
    <listitem>
     <simpara>
      Ed25519 public key
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   &return.success;
  </simpara>
 </refsect1>


</refentry>
