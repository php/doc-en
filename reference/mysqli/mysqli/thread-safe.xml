<refentry xml:id="mysqli.thread-safe" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>mysqli::thread_safe</refname>
  <refname>mysqli_thread_safe</refname>
  <refpurpose>Returns whether thread safety is given or not</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <para>&style.oop;</para>
  <methodsynopsis role="oop">
   <modifier>public</modifier> <type>bool</type><methodname>mysqli::thread_safe</methodname>
   <void/>
  </methodsynopsis>
  <para>&style.procedural;</para>
  <methodsynopsis role="procedural">
   <type>bool</type><methodname>mysqli_thread_safe</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Tells whether the client library is compiled as thread-safe.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &true; if the client library is thread-safe, otherwise &false;.
  </para>
 </refsect1>

</refentry>
