  <section xml:id="mysqli.props">
   &reftitle.properties;
   <variablelist>
    <varlistentry xml:id="mysqli.props.affected-rows">
     <term>
      <varname>affected_rows</varname>
     </term>
     <listitem>
      <para>
       Stores the number of affected rows in a previous MySQL operation.
       For further information, see
       <link linkend="mysqli.affected-rows">mysqli::$affected_rows</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.client-info">
     <term>
      <varname>client_info</varname>
     </term>
     <listitem>
      <para>
       Stores the MySQL client info.
       For further information, see
       <link linkend="mysqli.get-client-info">mysqli::$client_info</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.client-version">
     <term>
      <varname>client_version</varname>
     </term>
     <listitem>
      <para>
       Stores the MySQL client version as an integer.
       For further information, see
       <link linkend="mysqli.get-client-version">mysqli::$client_version</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.connect-errno">
     <term>
      <varname>connect_errno</varname>
     </term>
     <listitem>
      <para>
       Stores the error code from last connect call.
       For further information, see
       <link linkend="mysqli.connect-errno">mysqli::$connect_errno</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.connect-error">
     <term>
      <varname>connect_error</varname>
     </term>
     <listitem>
      <para>
       Stores the description of the last connection error.
       For further information, see
       <link linkend="mysqli.connect-error">mysqli::$connect_error</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.errno">
     <term>
      <varname>errno</varname>
     </term>
     <listitem>
      <para>
       Stores the error code for the most recent function call.
       For further information, see
       <link linkend="mysqli.errno">mysqli::$errno</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.error">
     <term>
      <varname>error</varname>
     </term>
     <listitem>
      <para>
       Stores the error code for the most recent function call.
       For further information, see
       <link linkend="mysqli.error">mysqli::$error</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.error-list">
     <term>
      <varname>error_list</varname>
     </term>
     <listitem>
      <para>
       Stores a list of errors from the last command executed.
       For further information, see
       <link linkend="mysqli.error-list">mysqli::$error_list</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.field-count">
     <term>
      <varname>field_count</varname>
     </term>
     <listitem>
      <para>
       Stores the number of columns for the most recent query.
       For further information, see
       <link linkend="mysqli.field-count">mysqli::$field_count</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.host-info">
     <term>
      <varname>host_info</varname>
     </term>
     <listitem>
      <para>
       Stores a string representing the type of connection used.
       For further information, see
       <link linkend="mysqli.get-host-info">mysqli::$host_info</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.info">
     <term>
      <varname>info</varname>
     </term>
     <listitem>
      <para>
       Stores information about the most recently executed query.
       For further information, see
       <link linkend="mysqli.info">mysqli::$info</link>.
      </para>
     </listitem>
    </varlistentry> <varlistentry xml:id="mysqli.props.insert-id">
     <term>
      <varname>insert_id</varname>
     </term>
     <listitem>
      <para>
       Stores the value generated for an AUTO_INCREMENT column by the last query.
       For further information, see
       <link linkend="mysqli.insert-id">mysqli::$insert_id</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.protocol-version">
     <term>
      <varname>protocol_version</varname>
     </term>
     <listitem>
      <para>
       Stores the version of the MySQL protocol used.  For further information, see
       <link linkend="mysqli.get-proto-info">mysqli::$protocol_version</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.server-info">
     <term>
      <varname>server_info</varname>
     </term>
     <listitem>
      <para>
       Stores the version of the MySQL server.  For further information, see
       <link linkend="mysqli.get-server-info">mysqli::$server_info</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.server-version">
     <term>
      <varname>server_version</varname>
     </term>
     <listitem>
      <para>
       Stores the version of the MySQL server as an integer.  For further information, see
       <link linkend="mysqli.get-server-version">mysqli::$server_version</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.sqlstate">
     <term>
      <varname>sqlstate</varname>
     </term>
     <listitem>
      <para>
       Stores the SQLSTATE error from previous MySQL operation.
       For further information, see
       <link linkend="mysqli.sqlstate">mysqli::$sqlstate</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.thread-id">
     <term>
      <varname>thread_id</varname>
     </term>
     <listitem>
      <para>
       Stores the thread ID for the current connection.  For further information, see
       <link linkend="mysqli.thread-id">mysqli::$thread_id</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="mysqli.props.warning-count">
     <term>
      <varname>warning_count</varname>
     </term>
     <listitem>
      <para>
       Stores the number of warnings from the last query for the given link.
       For further information, see
       <link linkend="mysqli.warning-count">mysqli::$warning_count</link>.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
