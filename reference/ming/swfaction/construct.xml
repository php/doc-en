<refentry xml:id="function.swfaction.construct" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>SWFAction->__construct()</refname>
  <refpurpose>Creates a new SWFAction</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <classsynopsis>
   <ooclass><classname>SWFAction</classname></ooclass>
   <methodsynopsis>
    <type>SWFAction</type><methodname>__construct</methodname>
    <methodparam><type>string</type><parameter>script</parameter></methodparam>
   </methodsynopsis>
  </classsynopsis>
  &warn.experimental.func;
  <para>
   Creates a new SWFAction and compiles the given <parameter>script</parameter>
   in it.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>script</parameter></term>
     <listitem>
      <para>
       An ActionScript snippet to associate with the SWFAction.
       See <xref linkend="class.swfaction" /> for more details.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 
</refentry>

