<?xml version="1.0" encoding="utf-8"?>

<refentry xml:id="ui-menu.appendcheck" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>UI\Menu::appendCheck</refname>
  <refpurpose>Append Checkable Menu Item</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>UI\MenuItem</type><methodname>UI\Menu::appendCheck</methodname>
   <methodparam><type>string</type><parameter>name</parameter></methodparam>
   <methodparam choice="opt"><type>string</type><parameter>type</parameter><initializer>UI\MenuItem::class</initializer></methodparam>
  </methodsynopsis>
  <para>
  Shall append a checkable menu item
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>name</parameter></term>
    <listitem>
     <para>
      The name (text) for the new item
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>type</parameter></term>
    <listitem>
     <para>
      The type for the new item
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
    A constructed checkable menu item of the given type
  </para>
 </refsect1>


</refentry>

