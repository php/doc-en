<refentry xml:id="ui-draw-pen.write" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>UI\Draw\Pen::write</refname>
  <refpurpose>Draw Text at Point</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <methodname>UI\Draw\Pen::write</methodname>
   <methodparam><type>UI\Point</type><parameter>point</parameter></methodparam>
   <methodparam><type>UI\Draw\Text\Layout</type><parameter>layout</parameter></methodparam>
  </methodsynopsis>
  <para>
   Shall draw the given text layout at the given point
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>point</parameter></term>
    <listitem>
     <para>
      The point to perform the drawing
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>layout</parameter></term>
    <listitem>
     <para>
      The layout of the text to draw
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>


</refentry>

