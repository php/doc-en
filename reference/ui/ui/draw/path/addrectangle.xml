<refentry xml:id="ui-draw-path.addrectangle" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>UI\Draw\Path::addRectangle</refname>
  <refpurpose>Draw a Rectangle</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <methodname>UI\Draw\Path::addRectangle</methodname>
   <methodparam><type>UI\Point</type><parameter>point</parameter></methodparam>
   <methodparam><type>UI\Size</type><parameter>size</parameter></methodparam>
  </methodsynopsis>
  <para>
   Shall map the path of a rectangle of the given size, at the given point
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>point</parameter></term>
    <listitem>
     <para>
      The point to begin the shape
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>size</parameter></term>
    <listitem>
     <para>
      The size of the rectangle
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

</refentry>

