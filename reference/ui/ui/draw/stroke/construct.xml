<?xml version="1.0" encoding="utf-8"?>

<refentry xml:id="ui-draw-stroke.construct" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>UI\Draw\Stroke::__construct</refname>
  <refpurpose>Construct a new Stroke</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <constructorsynopsis>
   <modifier>public</modifier> <methodname>UI\Draw\Stroke::__construct</methodname>
   <methodparam choice="opt"><type>int</type><parameter>cap</parameter><initializer>UI\Draw\Line\Cap::Flat</initializer></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>join</parameter><initializer>UI\Draw\Line\Join::Miter</initializer></methodparam>
   <methodparam choice="opt"><type>float</type><parameter>thickness</parameter><initializer>1</initializer></methodparam>
   <methodparam choice="opt"><type>float</type><parameter>miterLimit</parameter><initializer>10</initializer></methodparam>
  </constructorsynopsis>
  <para>
   Shall construct a new Stroke
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>cap</parameter></term>
    <listitem>
     <para>
      UI\Draw\Line\Cap::Flat, UI\Draw\Line\Cap::Round, or UI\Draw\Line\Cap::Square
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>join</parameter></term>
    <listitem>
     <para>
      UI\Draw\Line\Join::Miter, UI\Draw\Line\Join::Round, or UI\Draw\Line\Join::Bevel
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>thickness</parameter></term>
    <listitem>
     <para>
      The thickness of the stroke
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>miterLimit</parameter></term>
    <listitem>
     <para>
      Miter limit (default is sensible for all supported platforms)
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>



</refentry>

