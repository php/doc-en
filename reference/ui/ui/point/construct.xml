 <refnamediv>
  <refname>UI\Point::__construct</refname>
  <refpurpose>Construct a new Point</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <constructorsynopsis>
   <modifier>public</modifier> <methodname>UI\Point::__construct</methodname>
   <methodparam><type>float</type><parameter>x</parameter></methodparam>
   <methodparam><type>float</type><parameter>y</parameter></methodparam>
  </constructorsynopsis>
  <para>
   Construct a new Point using new co-ordinates
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>x</parameter></term>
    <listitem>
     <para>
      The new X co-ordinate
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>y</parameter></term>
    <listitem>
     <para>
      The new Y co-ordinate
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

</refentry>

