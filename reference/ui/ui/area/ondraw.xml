<refentry xml:id="ui-area.ondraw" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>UI\Area::onDraw</refname>
  <refpurpose>Draw Callback</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>protected</modifier> <methodname>UI\Area::onDraw</methodname>
   <methodparam><type>UI\Draw\Pen</type><parameter>pen</parameter></methodparam>
   <methodparam><type>UI\Size</type><parameter>areaSize</parameter></methodparam>
   <methodparam><type>UI\Point</type><parameter>clipPoint</parameter></methodparam>
   <methodparam><type>UI\Size</type><parameter>clipSize</parameter></methodparam>
  </methodsynopsis>
  <para>
   Shall be invoked when this Area requires redrawing
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>pen</parameter></term>
    <listitem>
     <para>
      A Pen suitable for drawing in this Area
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>areaSize</parameter></term>
    <listitem>
     <para>
      The size of the Area
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>clipPoint</parameter></term>
    <listitem>
     <para>
      The clip point of the Area
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>clipSize</parameter></term>
    <listitem>
     <para>
      The clip size of the Area
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

</refentry>

