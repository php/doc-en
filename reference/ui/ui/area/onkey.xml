 <refnamediv>
  <refname>UI\Area::onKey</refname>
  <refpurpose>Key Callback</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>protected</modifier> <methodname>UI\Area::onKey</methodname>
   <methodparam><type>string</type><parameter>key</parameter></methodparam>
   <methodparam><type>int</type><parameter>ext</parameter></methodparam>
   <methodparam><type>int</type><parameter>flags</parameter></methodparam>
  </methodsynopsis>
  <para>
   Shall be executed on key events
  </para>

 </refsect1>

