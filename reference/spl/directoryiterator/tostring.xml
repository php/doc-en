<refentry xml:id="directoryiterator.tostring" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>DirectoryIterator::__toString</refname>
  <refpurpose>Get file name as a string</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier>
   <type>string</type>
   <methodname>DirectoryIterator::__toString</methodname>
   <void/>
  </methodsynopsis>

  <para>
   Get the file name of the current <classname>DirectoryIterator</classname> item.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the file name of the current <classname>DirectoryIterator</classname> item.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>A <methodname>DirectoryIterator::__toString</methodname> example</title>
    <para>
     This example will list the contents of the directory containing the script.
    </para>
    <programlisting role="php">
<![CDATA[
<?php
$dir = new DirectoryIterator(dirname(__FILE__));
foreach ($dir as $fileinfo) {
    echo $fileinfo;
}
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
.
..
apple.jpg
banana.jpg
index.php
pear.jpg
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>DirectoryIterator::getFilename</methodname></member>
    <member>The <link linkend="object.tostring">__toString()</link> magic method</member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
