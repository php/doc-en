<refentry xml:id="directoryiterator.isreadable" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>DirectoryIterator::isReadable</refname>
  <refpurpose>Determine if current DirectoryIterator item can be read</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="DirectoryIterator">
   <modifier>public</modifier> <type>bool</type><methodname>DirectoryIterator::isReadable</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Determines if the current <classname>DirectoryIterator</classname>
   item is readable.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns &true; if the file is readable, otherwise &false;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><methodname>DirectoryIterator::isReadable</methodname> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$iterator = new DirectoryIterator(dirname(__FILE__));
foreach ($iterator as $fileinfo) {
    if ($fileinfo->isReadable()) {
        echo $fileinfo->getFilename() . "\n";
    }
}
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
apple.jpg
banana.jpg
example.php
pears.jpg
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>DirectoryIterator::isExecutable</methodname></member>
    <member><methodname>DirectoryIterator::isWritable</methodname></member>
    <member><methodname>DirectoryIterator::getPerms</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

