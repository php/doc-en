<refentry xml:id="splobjectstorage.serialize" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SplObjectStorage::serialize</refname>
  <refpurpose>Serializes the storage</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="SplObjectStorage">
   <modifier>public</modifier> <type>string</type><methodname>SplObjectStorage::serialize</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Returns a string representation of the storage.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   A string representing the storage.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>SplObjectStorage::serialize</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$s = new SplObjectStorage;
$o = new stdClass;
$s[$o] = "data";

echo $s->serialize()."\n";
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
x:i:1;O:8:"stdClass":0:{},s:4:"data";;m:a:0:{}
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>SplObjectStorage::unserialize</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
