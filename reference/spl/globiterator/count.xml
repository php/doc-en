<refentry xml:id="globiterator.count" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>GlobIterator::count</refname>
  <refpurpose>Get the number of directories and files</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>integer</type><methodname>GlobIterator::count</methodname>
   <void />
  </methodsynopsis>
  <para>
   Gets the number of directories and files found by
   the glob expression.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   The number of returned directories and files, as an
   <type>integer</type>.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><methodname>GlobIterator::count</methodname> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$iterator = new GlobIterator('*.xml');

printf("Matched %d item(s)\r\n", $iterator->count());
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Matched 8 item(s)
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>GlobIterator::__construct</methodname></member>
    <member><function>count</function></member>
    <member><function>glob</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

