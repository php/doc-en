<refentry xml:id="splfileobject.valid" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SplFileObject::valid</refname>
  <refpurpose>Not at EOF</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>SplFileObject::valid</methodname>
   <void />
  </methodsynopsis>
  <para>
   Check whether EOF has been reached.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns &true; if not reached EOF, &false; otherwise.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><methodname>SplFileObject::valid</methodname> example</title>
    <programlisting role="php">
<![CDATA[
<?php
// Loop over a file, line by line
$file = new SplFileObject("file.txt");
while ($file->valid()) {
    echo $file->fgets();
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>SplFileObject::current</methodname></member>
    <member><methodname>SplFileObject::key</methodname></member>
    <member><methodname>SplFileObject::seek</methodname></member>
    <member><methodname>SplFileObject::next</methodname></member>
    <member><methodname>SplFileObject::rewind</methodname></member>
   </simplelist>
  </para>
 </refsect1>

