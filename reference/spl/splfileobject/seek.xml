<refentry xml:id="splfileobject.seek" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SplFileObject::seek</refname>
  <refpurpose>Seek to specified line</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>void</type><methodname>SplFileObject::seek</methodname>
   <methodparam><type>int</type><parameter>line_pos</parameter></methodparam>
  </methodsynopsis>
  <para>
   Seek to specified line in the file.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>line_pos</parameter></term>
     <listitem>
      <para>
       The zero-based line number to seek to.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.void;
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Throws a <classname>LogicException</classname> if the 
   <parameter>line_pos</parameter> is negative.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><methodname>SplFileObject::seek</methodname> example</title>
    <para>This example outputs the third line of the script which is found at position 2.</para>
    <programlisting role="php">
<![CDATA[
<?php
$file = new SplFileObject(__FILE__);
$file->seek(2);
echo $file->current();
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
$file->seek(2);

]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>SplFileObject::current</methodname></member>
    <member><methodname>SplFileObject::key</methodname></member>
    <member><methodname>SplFileObject::next</methodname></member>
    <member><methodname>SplFileObject::rewind</methodname></member>
    <member><methodname>SplFileObject::valid</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

