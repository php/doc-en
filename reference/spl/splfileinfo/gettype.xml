<refentry xml:id="splfileinfo.gettype" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SplFileInfo::getType</refname>
  <refpurpose>Gets file type</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type class="union"><type>string</type><type>false</type></type><methodname>SplFileInfo::getType</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Returns the type of the file referenced on success, or &false; on failure.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   A <type>string</type> representing the type of the entry.
   May be one of <literal>file</literal>, <literal>link</literal>,
   <literal>dir</literal>, <literal>block</literal>, <literal>fifo</literal>,
   <literal>char</literal>, <literal>socket</literal>, or <literal>unknown</literal>
  </para>
 </refsect1>
 
 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Throws a <classname>RuntimeException</classname> on error.
  </para>
 </refsect1>
 

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>SplFileInfo::getType</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php

$info = new SplFileInfo(__FILE__);
echo $info->getType().PHP_EOL;

$info = new SplFileInfo(dirname(__FILE__));
echo $info->getType();

?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
file
dir
]]>
    </screen>
   </example>
  </para>
 </refsect1>

</refentry>
