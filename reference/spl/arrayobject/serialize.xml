<refentry xml:id="arrayobject.serialize" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ArrayObject::serialize</refname>
  <refpurpose>Serialize an ArrayObject</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="ArrayObject">
   <modifier>public</modifier> <type>string</type><methodname>ArrayObject::serialize</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Serializes an <classname>ArrayObject</classname>.
  </para>

  &warn.undocumented.func;

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   The serialized representation of the <classname>ArrayObject</classname>.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><methodname>ArrayObject::serialize</methodname> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$o = new ArrayObject();

$s1 = serialize($o);
$s2 = $o->serialize();

var_dump($s1);
var_dump($s2);
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
string(45) "C:11:"ArrayObject":21:{x:i:0;a:0:{};m:a:0:{}}"
string(21) "x:i:0;a:0:{};m:a:0:{}"
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>ArrayObject::unserialize</methodname></member>
    <member><function>serialize</function></member>
    <member><link linkend="language.oop5.serialization">Serializing Objects</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
