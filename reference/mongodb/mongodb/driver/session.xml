    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>string</type>
     <varname linkend="mongodb-driver-session.constants.transaction-starting">MongoDB\Driver\Session::TRANSACTION_STARTING</varname>
