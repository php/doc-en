    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>string</type>
     <varname linkend="mongodb-driver-session.constants.transaction-in-progress">MongoDB\Driver\Session::TRANSACTION_IN_PROGRESS</varname>
     <initializer>in_progress</initializer>
    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
