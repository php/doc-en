     <initializer>2</initializer>
    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>int</type>
     <varname linkend="reflectionclassconstant.constants.is-private">ReflectionClassConstant::IS_PRIVATE</varname>
