     <varname linkend="reflectionmethod.props.name">name</varname>
    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>public</modifier>
     <varname linkend="reflectionmethod.props.class">class</varname>
    </fieldsynopsis>

    
