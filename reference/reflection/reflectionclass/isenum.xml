<refentry xml:id="reflectionclass.isenum" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ReflectionClass::isEnum</refname>
  <refpurpose>Returns whether this is an enum</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>ReflectionClass::isEnum</methodname>
   <void />
  </methodsynopsis>
  <para>
   Checks if a class is an <link linkend="language.enumerations">enum</link>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns &true; if this is an <link linkend="language.enumerations">enum</link>, &false; otherwise.
  </para>
 </refsect1>


</refentry>

