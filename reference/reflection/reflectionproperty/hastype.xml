<refentry xml:id="reflectionproperty.hastype" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ReflectionProperty::hasType</refname>
  <refpurpose>Checks if property has a type</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="ReflectionProperty">
   <modifier>public</modifier> <type>bool</type><methodname>ReflectionProperty::hasType</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Checks if the property has a type associated with it.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &true; if a type is specified, &false; otherwise.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example xml:id="reflectionproperty.hastype.example.basic">
   <title><methodname>ReflectionProperty::hasType</methodname> example</title>
   <programlisting role="php">
<![CDATA[
<?php
class User
{
    public string $name;
}

$rp = new ReflectionProperty('User', 'name');
var_dump($rp->hasType());
?>
]]>
   </programlisting>
   &example.outputs;
   <screen>
<![CDATA[
bool(true)
]]>
   </screen>
  </example>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><methodname>ReflectionProperty::getType</methodname></member>
   <member><methodname>ReflectionProperty::isInitialized</methodname></member>
  </simplelist>
 </refsect1>

</refentry>
