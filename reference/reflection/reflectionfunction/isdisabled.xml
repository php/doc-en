<refentry xml:id="reflectionfunction.isdisabled" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ReflectionFunction::isDisabled</refname>
  <refpurpose>Checks if function is disabled</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>ReflectionFunction::isDisabled</methodname>
   <void />
  </methodsynopsis>
  <para>
   Checks if the function is disabled, via the 
   <link linkend="ini.disable-functions">disable_functions</link>
   directive.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &true; if it's disable, otherwise &false;
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>ReflectionFunctionAbstract::isUserDefined</methodname></member>
    <member><link linkend="ini.disable-functions">disable_functions directive</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

