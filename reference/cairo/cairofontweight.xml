     <modifier>const</modifier>
     <type>integer</type>
     <varname linkend="cairofontweight.constants.bold">CairoFontWeight::BOLD</varname>
     <initializer>1</initializer>
    </fieldsynopsis>
    
   </classsynopsis>
<!-- }}} -->

  </section>
  
<!-- {{{ CairoFontWeight constants -->
  <section xml:id="cairofontweight.constants">
