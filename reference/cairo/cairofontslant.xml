 <title>The CairoFontSlant class</title>
 <titleabbrev>CairoFontSlant</titleabbrev>

 <partintro>

<!-- {{{ CairoFontSlant intro -->
  <section xml:id="cairofontslant.intro">
   &reftitle.intro;
   <para>
    Specifies variants of a font face based on their slant.
   </para>
  </section>
<!-- }}} -->

  <section xml:id="cairofontslant.synopsis">
   &reftitle.classsynopsis;

<!-- {{{ Synopsis -->
   <classsynopsis>
    <ooclass><classname>CairoFontSlant</classname></ooclass>

<!-- {{{ Class synopsis -->
    <classsynopsisinfo>
     <ooclass>
      <classname>CairoFontSlant</classname>
     </ooclass>
    </classsynopsisinfo>
<!-- }}} -->
    <classsynopsisinfo role="comment">&Constants;</classsynopsisinfo>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>integer</type>
     <varname linkend="cairofontslant.constants.normal">CairoFontSlant::NORMAL</varname>
     <initializer>0</initializer>
    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>integer</type>
     <varname linkend="cairofontslant.constants.italic">CairoFontSlant::ITALIC</varname>
     <initializer>1</initializer>
    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>integer</type>
     <varname linkend="cairofontslant.constants.oblique">CairoFontSlant::OBLIQUE</varname>
     <initializer>2</initializer>
    </fieldsynopsis>
    
   </classsynopsis>
<!-- }}} -->

  </section>
  
<!-- {{{ CairoFontSlant constants -->
  <section xml:id="cairofontslant.constants">
   &reftitle.constants;
   <variablelist>

    <varlistentry xml:id="cairofontslant.constants.normal">
     <term><constant>CairoFontSlant::NORMAL</constant></term>
     <listitem>
      <para>Upright font style </para>
     </listitem>
    </varlistentry>

    <varlistentry xml:id="cairofontslant.constants.italic">
     <term><constant>CairoFontSlant::ITALIC</constant></term>
     <listitem>
      <para>Italic font style </para>
     </listitem>
    </varlistentry>

    <varlistentry xml:id="cairofontslant.constants.oblique">
     <term><constant>CairoFontSlant::OBLIQUE</constant></term>
     <listitem>
      <para>Oblique font style </para>
     </listitem>
    </varlistentry>

   </variablelist>
  </section>
<!-- }}} -->


 </partintro>

 

