<phpdoc:classref xml:id="class.cairocontent" xmlns:phpdoc="http://php.net/ns/phpdoc" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xi="http://www.w3.org/2001/XInclude">

 <title>The CairoContent class</title>
 <titleabbrev>CairoContent</titleabbrev>

 <partintro>

<!-- {{{ CairoContent intro -->
  <section xml:id="cairocontent.intro">
   &reftitle.intro;
   <para>
    <classname>CairoContent</classname> is used to describe the content that a surface will contain,
    whether color information, alpha information (translucence vs. opacity), or both.
   </para>
   <para>
       Note: The large values here are designed to keep <classname>CairoContent</classname> values distinct from
       <classname>CairoContent</classname> values so that the implementation can detect the error if users confuse the
       two types.
   </para>
  </section>
<!-- }}} -->

  <section xml:id="cairocontent.synopsis">
   &reftitle.classsynopsis;

<!-- {{{ Synopsis -->
   <classsynopsis>
    <ooclass><classname>CairoContent</classname></ooclass>

<!-- {{{ Class synopsis -->
    <classsynopsisinfo>
     <ooclass>
      <classname>CairoContent</classname>
     </ooclass>
    </classsynopsisinfo>
<!-- }}} -->
    <classsynopsisinfo role="comment">&Constants;</classsynopsisinfo>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>integer</type>
     <varname linkend="cairocontent.constants.color">CairoContent::COLOR</varname>
     <initializer>4096</initializer>
    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>integer</type>
     <varname linkend="cairocontent.constants.alpha">CairoContent::ALPHA</varname>
     <initializer>8192</initializer>
    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>integer</type>
     <varname linkend="cairocontent.constants.color-alpha">CairoContent::COLOR_ALPHA</varname>
     <initializer>12288</initializer>
    </fieldsynopsis>
    
   </classsynopsis>
<!-- }}} -->

  </section>
  
<!-- {{{ CairoContent constants -->
  <section xml:id="cairocontent.constants">
   &reftitle.constants;
   <variablelist>

    <varlistentry xml:id="cairocontent.constants.color">
     <term><constant>CairoContent::COLOR</constant></term>
     <listitem>
      <para>The surface will hold color content only. </para>
     </listitem>
    </varlistentry>

    <varlistentry xml:id="cairocontent.constants.alpha">
     <term><constant>CairoContent::ALPHA</constant></term>
     <listitem>
      <para>The surface will hold alpha content only. </para>
     </listitem>
    </varlistentry>

    <varlistentry xml:id="cairocontent.constants.color-alpha">
     <term><constant>CairoContent::COLOR_ALPHA</constant></term>
     <listitem>
      <para>The surface will hold color and alpha content.</para>
     </listitem>
    </varlistentry>

   </variablelist>
  </section>
<!-- }}} -->


 </partintro>

 

