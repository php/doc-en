<refentry xml:id="mpegfile.construct" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>KTaglib_MPEG_File::__construct</refname>
  <refpurpose>Opens a new file</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <constructorsynopsis>
    <modifier>public</modifier> <methodname>KTaglib_MPEG_File::__construct</methodname>
    <methodparam><type>string</type><parameter>filename</parameter></methodparam>
  </constructorsynopsis>
  <para>
    Opens a new MPEG file.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>filename</parameter></term>
     <listitem>
      <para>
       The file to read
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Opens a new MP3 file and read the title</title>
    <programlisting role="php">
<![CDATA[
<?php
$mpeg = new KTaglib_MPEG_File('example.mp3');
echo $mpeg->getID3v1Tag()->getTitle();
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

</refentry>

