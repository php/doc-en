<refentry xml:id="tag.getcomment" xmlns="http://docbook.org/ns/docbook">
  <refnamediv>
    <refname>KTaglib_Tag::getComment</refname>
    <refpurpose>Returns the comment from a ID3 tag</refpurpose>
  </refnamediv>
  <refsect1 role="description">
    &reftitle.description;
    <methodsynopsis>
      <modifier>public</modifier>
      <type>string</type>
      <methodname>KTaglib_Tag::getComment</methodname>
      <void />
    </methodsynopsis>
    <para>
      Returns the comment of an ID3 tag. This method is implemented
      in ID3v1 and ID3v2 tags.
    </para>
  </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
    Returns the comment string
  </para>
 </refsect1>

</refentry>

