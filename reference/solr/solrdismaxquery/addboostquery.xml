<refentry xml:id="solrdismaxquery.addboostquery" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SolrDisMaxQuery::addBoostQuery</refname>
  <refpurpose>Adds a boost query field with value and optional boost (bq parameter)</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>SolrDisMaxQuery</type><methodname>SolrDisMaxQuery::addBoostQuery</methodname>
   <methodparam><type>string</type><parameter>field</parameter></methodparam>
   <methodparam><type>string</type><parameter>value</parameter></methodparam>
   <methodparam choice="opt"><type>string</type><parameter>boost</parameter></methodparam>
  </methodsynopsis>
  <para>
    Adds a Boost Query field with value [and boost] (bq parameter)
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>field</parameter></term>
    <listitem>
     <para>

     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>value</parameter></term>
    <listitem>
     <para>

     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>boost</parameter></term>
    <listitem>
     <para>

     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   <type>SolrDisMaxQuery</type>
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>SolrDisMaxQuery::addBoostQuery</function> example</title>
   <programlisting role="php">
<![CDATA[
<?php

$dismaxQuery = new SolrDisMaxQuery("lucene");
$dismaxQuery
    ->addBoostQuery('cat', 'clothing', 2)
    ->addBoostQuery('cat', 'electronics', 5.1)
;
echo $dismaxQuery.PHP_EOL;
?>
]]>
   </programlisting>
   &example.outputs.similar;
   <screen>
<![CDATA[
q=lucene&defType=edismax&bq=cat:clothing^2 cat:electronics^5.1
]]>
   </screen>
  </example>
 </refsect1>


