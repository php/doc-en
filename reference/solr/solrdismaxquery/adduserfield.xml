<refentry xml:id="solrdismaxquery.adduserfield" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SolrDisMaxQuery::addUserField</refname>
  <refpurpose>Adds a field to User Fields Parameter (uf)</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>SolrDisMaxQuery</type><methodname>SolrDisMaxQuery::addUserField</methodname>
   <methodparam><type>string</type><parameter>field</parameter></methodparam>
  </methodsynopsis>
  <para>
    Adds a field to The User Fields Parameter (uf)
  </para>


 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>field</parameter></term>
    <listitem>
     <para>
      Field Name
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   <type>SolrDisMaxQuery</type>
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>SolrDisMaxQuery::addUserField</function> example</title>
   <programlisting role="php">
<![CDATA[
<?php

$dismaxQuery = new SolrDisMaxQuery('lucene');
$dismaxQuery
->addUserField('cat')
->addUserField('text')
->addUserField('*_dt');

echo $dismaxQuery.PHP_EOL;

?>
]]>
   </programlisting>
   &example.outputs.similar;
   <screen>
<![CDATA[
q=lucene&defType=edismax&uf=cat text *_dt
]]>
   </screen>
  </example>
 </refsect1>


 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><methodname>SolrDisMaxQuery::removeUserField</methodname></member>
   <member><methodname>SolrDisMaxQuery::setUserFields</methodname></member>
  </simplelist>
 </refsect1>

</refentry>

