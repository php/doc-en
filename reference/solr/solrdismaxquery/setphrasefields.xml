<refentry xml:id="solrdismaxquery.setphrasefields" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SolrDisMaxQuery::setPhraseFields</refname>
  <refpurpose>Sets  Phrase Fields and their boosts (and slops) using pf2 parameter</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>SolrDisMaxQuery</type><methodname>SolrDisMaxQuery::setPhraseFields</methodname>
   <methodparam><type>string</type><parameter>fields</parameter></methodparam>
  </methodsynopsis>
  <para>
    Sets  Phrase Fields (pf) and their boosts (and slops)
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>fields</parameter></term>
    <listitem>
     <para>
      Fields, boosts [, slops]
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   <type>SolrDisMaxQuery</type>
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>SolrDisMaxQuery::setPhraseFields</function> example</title>
   <programlisting role="php">
<![CDATA[
<?php
$dismaxQuery = new SolrDisMaxQuery("lucene");
$dismaxQuery->setPhraseFields("cat~5.1^2 feature^4.5");
echo $dismaxQuery.PHP_EOL;

?>
]]>
   </programlisting>
   &example.outputs.similar;
   <screen>
<![CDATA[
q=lucene&defType=edismax&pf=cat~5.1^2 feature^4.5
]]>
   </screen>
  </example>
 </refsect1>


 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><methodname>SolrDisMaxQuery::addPhraseFields</methodname></member>
   <member><methodname>SolrDisMaxQuery::removePhraseField</methodname></member>
  </simplelist>
 </refsect1>

</refentry>

