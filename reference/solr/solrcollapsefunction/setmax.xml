<refentry xml:id="solrcollapsefunction.setmax" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SolrCollapseFunction::setMax</refname>
  <refpurpose>Selects the group heads by the max value of a numeric field or function query</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>SolrCollapseFunction</type><methodname>SolrCollapseFunction::setMax</methodname>
   <methodparam><type>string</type><parameter>max</parameter></methodparam>
  </methodsynopsis>
  <para>
    Selects the group heads by the max value of a numeric field or function query.
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>max</parameter></term>
    <listitem>
     <para>
      
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   <type>SolrCollapseFunction</type>
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>SolrCollapseFunction::setMax</function> example</title>
   <programlisting role="php">
<![CDATA[
<?php

$func = new SolrCollapseFunction('field_name');

$func->setMax('sum(cscore(),field(some_field))');

$query = new SolrQuery('*:*');

$query->collapse($func);

?>
]]>
   </programlisting>
  </example>
 </refsect1>
</refentry>

