<refentry xml:id="solrquery.sethighlightformatter" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SolrQuery::setHighlightFormatter</refname>
  <refpurpose>Specify a formatter for the highlight output</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>SolrQuery</type><methodname>SolrQuery::setHighlightFormatter</methodname>
   <methodparam><type>string</type><parameter>formatter</parameter></methodparam>
   <methodparam choice="opt"><type>string</type><parameter>field_override</parameter></methodparam>
  </methodsynopsis>
  <para>
   Specify a formatter for the highlight output.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>formatter</parameter></term>
     <listitem>
      <para>
       Currently the only legal value is "simple"
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>field_override</parameter></term>
     <listitem>
      <para>
       The name of the field.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns an instance of <classname>SolrQuery</classname>.
  </para>
 </refsect1>
</refentry>

