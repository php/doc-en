        <entry></entry>
       </row>
       <row>
        <entry>BLOB</entry>
        <entry>BLOB</entry>
        <entry>Must use a prepared statement, and <constant>PDO::PARAM_LOB</constant></entry>
       </row>
       <row>
        <entry>BIT VARYING</entry>
        <entry>BLOB</entry>
        <entry>Must use a prepared statement, and <constant>PDO::PARAM_LOB</constant></entry>
