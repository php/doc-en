<refentry xml:id="eventdnsbase.setsearchndots" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>EventDnsBase::setSearchNdots</refname>
  <refpurpose>Set the 'ndots' parameter for searches</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier>
   <type>bool</type>
   <methodname>EventDnsBase::setSearchNdots</methodname>
   <methodparam>
    <type>int</type>
    <parameter>ndots</parameter>
   </methodparam>
  </methodsynopsis>
  <para>
   Set the
   <constant>'ndots'</constant>
   parameter for searches. Sets the number of dots which, when found in a
   name, causes the first query to be without any search domain.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term>
     <parameter>ndots</parameter>
    </term>
    <listitem>
     <para>
      The number of dots.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>
</refentry>
