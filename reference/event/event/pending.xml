<refentry xml:id="event.pending" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>Event::pending</refname>
  <refpurpose>Detects whether event is pending or scheduled</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier>
   <type>bool</type>
   <methodname>Event::pending</methodname>
   <methodparam>
    <type>int</type>
    <parameter>flags</parameter>
   </methodparam>
  </methodsynopsis>
  <para>
   Detects whether event is pending or scheduled
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term>
     <parameter>flags</parameter>
    </term>
    <listitem>
     <para>
      One of, or a composition of the following constants:
      <constant>Event::READ</constant>
      ,
      <constant>Event::WRITE</constant>
      ,
      <constant>Event::TIMEOUT</constant>
      ,
      <constant>Event::SIGNAL</constant>
      .
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns &true; if event is pending or scheduled. Otherwise &false;.
  </para>
 </refsect1>
</refentry>
