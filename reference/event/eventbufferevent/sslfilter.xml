<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xi="http://www.w3.org/2001/XInclude" xml:id="eventbufferevent.sslfilter">
 <refnamediv>
  <refname>EventBufferEvent::sslFilter</refname>
  <refpurpose>Create a new SSL buffer event to send its data over another buffer event</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier>
   <modifier>static</modifier>
   <type>EventBufferEvent</type>
   <methodname>EventBufferEvent::sslFilter</methodname>
   <methodparam>
    <type>EventBase</type>
    <parameter>base</parameter>
   </methodparam>
   <methodparam>
    <type>EventBufferEvent</type>
    <parameter>underlying</parameter>
   </methodparam>
   <methodparam>
    <type>EventSslContext</type>
    <parameter>ctx</parameter>
   </methodparam>
   <methodparam>
    <type>int</type>
    <parameter>state</parameter>
   </methodparam>
   <methodparam choice="opt">
    <type>int</type>
    <parameter>options</parameter>
    <initializer>0</initializer>
   </methodparam>
  </methodsynopsis>
  <simpara>
   Create a new SSL buffer event to send its data over another buffer event
  </simpara>
  <note>
   <simpara>
    This function is available only if
    <literal>Event</literal>
    is compiled with OpenSSL support.
   </simpara>
  </note>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term>
     <parameter>base</parameter>
    </term>
    <listitem>
     <simpara>
      Associated event base.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term>
     <parameter>underlying</parameter>
    </term>
    <listitem>
     <simpara>
      A socket buffer event to use for this SSL.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term>
     <parameter>ctx</parameter>
    </term>
    <listitem>
     <simpara>
      Object of
      <classname>EventSslContext</classname>
      class.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term>
     <parameter>state</parameter>
    </term>
    <listitem>
     <simpara>
      The current state of SSL connection:
      <constant>EventBufferEvent::SSL_OPEN</constant>,
      <constant>EventBufferEvent::SSL_ACCEPTING</constant>
      or
      <constant>EventBufferEvent::SSL_CONNECTING</constant>.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term>
     <parameter>options</parameter>
    </term>
    <listitem>
     <simpara>
      One or more buffer event options.
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   Returns a new SSL
   <classname>EventBufferEvent</classname>
   object.
  </simpara>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <xi:include xpointer="xmlns(db=http://docbook.org/ns/docbook)                           xpointer(id('event.example.smtp')/*)"/>
  </example>
 </refsect1>
 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member>
    <methodname>EventBufferEvent::sslSocket</methodname>
   </member>
  </simplelist>
 </refsect1>
</refentry>
