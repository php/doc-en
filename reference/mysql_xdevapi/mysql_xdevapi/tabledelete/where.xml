<?xml version="1.0" encoding="utf-8"?>

<refentry xml:id="mysql-xdevapi-tabledelete.where" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>TableDelete::where</refname>
  <refpurpose>Set delete search condition</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>mysql_xdevapi\TableDelete</type><methodname>mysql_xdevapi\TableDelete::where</methodname>
   <methodparam><type>string</type><parameter>where_expr</parameter></methodparam>
  </methodsynopsis>
  <para>
   Sets the search condition to filter.
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>where_expr</parameter></term>
    <listitem>
     <para>
      Define the search condition to filter documents or records.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   TableDelete object.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>mysql_xdevapi\TableDelete::where</function> example</title>
   <programlisting role="php">
<![CDATA[
<?php
$session = mysql_xdevapi\getSession("mysqlx://user:password@localhost");

$schema = $session->getSchema("addressbook");
$table  = $schema->getTable("names");

$table->delete()
  ->where("id = :id")
  ->bind(['id' => 42])
  ->limit(1)
  ->execute();

?>
]]>
   </programlisting>
  </example>
 </refsect1>

</refentry>

