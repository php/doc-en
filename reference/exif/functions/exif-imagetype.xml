  <refsect1 role="examples">
   &reftitle.examples;
   <para>
    <example>
     <title><function>exif_imagetype</function> example</title>
     <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('image.gif') != IMAGETYPE_GIF) {
    echo 'The picture is not a gif';
}
?>
]]>  
     </programlisting>
    </example>
   </para>
