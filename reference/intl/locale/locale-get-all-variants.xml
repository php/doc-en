<refentry xmlns="http://docbook.org/ns/docbook"
 xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="locale.getallvariants">
 <refnamediv>
  <refname>Locale::getAllVariants</refname>
  <refname>locale_get_all_variants</refname>
  <refpurpose>Gets the variants for the input locale</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <para>Object oriented style</para>
  <classsynopsis>
   <ooclass>
    <classname>Locale</classname>
   </ooclass>
   <methodsynopsis>
    <modifier>static</modifier>
    <type>array</type>
    <methodname>getAllVariants</methodname>
    <methodparam><type>string</type><parameter>locale</parameter></methodparam>
   </methodsynopsis>
  </classsynopsis>
  <para>Procedural style</para>
  <methodsynopsis>
   <type>array</type>
   <methodname>locale_get_all_variants</methodname>
   <methodparam><type>string</type><parameter>locale</parameter></methodparam>
  </methodsynopsis>
  <para>Gets the variants for the input locale</para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>locale</parameter></term>
     <listitem>
      <para>the locale to extract the variants from</para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>


 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   the array containing the list of all variants subtag for the locale or &null;
   if not present
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>
    <function>locale_get_all_variants</function> example
   </title>
   <programlisting role="php">
    <![CDATA[
<?php
 $arr = locale_get_all_variants('sl_IT_NEDIS_ROJAZ_1901');
 var_export( $arr );
?>
]]>
   </programlisting>
  </example>
  <example>
   <title>OO example</title>
   <programlisting role="php">
    <![CDATA[
<?php
 $arr = Locale::getAllVariants('sl_IT_NEDIS_ROJAZ_1901');
 var_export( $arr );
?>
]]>
   </programlisting>
  </example>
  &example.outputs;
  <screen>
   <![CDATA[
	array (
	  0 => 'NEDIS',
	  1 => 'ROJAZ',
	  2 => '1901',	
	)
	]]>
  </screen>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>locale_get_primary_language</function></member>
    <member><function>locale_get_script</function></member>
    <member><function>locale_get_region</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>
