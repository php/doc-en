<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="gmagick.annotateimage">
 <refnamediv>
  <refname>Gmagick::annotateimage</refname>
  <refpurpose>Annotates an image with text</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>Gmagick</type><methodname>Gmagick::annotateimage</methodname>
   <methodparam><type>GmagickDraw</type><parameter>GmagickDraw</parameter></methodparam>
   <methodparam><type>float</type><parameter>x</parameter></methodparam>
   <methodparam><type>float</type><parameter>y</parameter></methodparam>
   <methodparam><type>float</type><parameter>angle</parameter></methodparam>
   <methodparam><type>string</type><parameter>text</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   Annotates an image with text.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>GmagickDraw</parameter></term>
    <listitem>
     <simpara>
      The <classname>GmagickDraw</classname> object that contains settings for drawing the text.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>x</parameter></term>
    <listitem>
     <simpara>
      Horizontal offset in pixels to the left of text.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>y</parameter></term>
    <listitem>
     <simpara>
      Vertical offset in pixels to the baseline of text.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>angle</parameter></term>
    <listitem>
     <simpara>
      The angle at which to write the text.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>text</parameter></term>
    <listitem>
     <simpara>
      The string to draw.
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   The <classname>Gmagick</classname> object with annotation made.
  </simpara>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <simpara>
   &gmagick.gmagickexception.throw;
  </simpara>
 </refsect1>
</refentry>
