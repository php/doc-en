<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="gmagick.setsize">
 <refnamediv>
  <refname>Gmagick::setsize</refname>
  <refpurpose>Sets the size of the Gmagick object</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>Gmagick</type><methodname>Gmagick::setsize</methodname>
   <methodparam><type>int</type><parameter>columns</parameter></methodparam>
   <methodparam><type>int</type><parameter>rows</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   Sets the size of the Gmagick object. Set it before you read a raw image format such as <constant>Gmagick::COLORSPACE_RGB</constant>,
   <constant>Gmagick::COLORSPACE_GRAY</constant>, or <constant>Gmagick::COLORSPACE_CMYK</constant>.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>columns</parameter></term>
    <listitem>
     <simpara>
      The width in pixels.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>rows</parameter></term>
    <listitem>
     <simpara>
      The height in pixels.
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   The <classname>Gmagick</classname> object.
  </simpara>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <simpara>
   &gmagick.gmagickexception.throw;
  </simpara>
 </refsect1>

</refentry>
