 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <informalexample>
    <programlisting role="php">
<![CDATA[
<?php
$im = imagecreatefrompng("test.png");

header('Content-Type: image/png');

imagepng($im);
?>
]]>
    </programlisting>
   </informalexample>
  </para>
 </refsect1>
