<refentry xml:id="function.imagefontwidth" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>imagefontwidth</refname>
  <refpurpose>Get font width</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>imagefontwidth</methodname>
   <methodparam><type class="union"><type>GdFont</type><type>int</type></type><parameter>font</parameter></methodparam>
  </methodsynopsis>
  <para>
   Returns the pixel width of a character in font.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &gd.font.description;
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the pixel width of the font.
  </para>
 </refsect1>

 <refsect1 role="changelog">
 &reftitle.changelog;
 <para>
  <informaltable>
   <tgroup cols="2">
    <thead>
     <row>
      <entry>&Version;</entry>
      <entry>&Description;</entry>
     </row>
    </thead>
    <tbody>
     &gd.changelog.gdfont-instance;
    </tbody>
   </tgroup>
  </informaltable>
 </para>
</refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Using <function>imagefontwidth</function> on built-in fonts</title>
    <programlisting role="php">
<![CDATA[
<?php
echo 'Font width: ' . imagefontwidth(4);
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Font width: 8
]]>
    </screen>
   </example>
   <example>
    <title>Using <function>imagefontwidth</function> together with <function>imageloadfont</function></title>
    <programlisting role="php">
<![CDATA[
<?php
// Load a .gdf font
$font = imageloadfont('anonymous.gdf');

echo 'Font width: ' . imagefontwidth($font);
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Font width: 23
]]>
    </screen>
   </example>
  </para>
 </refsect1>
 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><function>imagefontheight</function></member>
   <member><function>imageloadfont</function></member>
  </simplelist>
 </refsect1>
</refentry>

