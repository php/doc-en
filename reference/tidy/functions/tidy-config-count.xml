<refentry xml:id="function.tidy-config-count" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>tidy_config_count</refname>
  <refpurpose>Returns the Number of Tidy configuration errors encountered for specified document</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>tidy_config_count</methodname>
   <methodparam><type>tidy</type><parameter>tidy</parameter></methodparam>
  </methodsynopsis>
  <para>
   Returns the number of errors encountered in the configuration of the
   specified tidy <parameter>tidy</parameter>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>tidy</parameter></term>
     <listitem>
      <para>
       &tidy.object;
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the number of errors.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>tidy_config_count</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$html = '<p>test</I>';

$config = array('doctype' => 'bogus');

$tidy = tidy_parse_string($html, $config);

/* This outputs 1, because 'bogus' isn't a valid doctype */
echo tidy_config_count($tidy);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
</refentry>
