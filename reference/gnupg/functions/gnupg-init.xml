<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.gnupg-init">
 <refnamediv>
  <refname>gnupg_init</refname>
  <refpurpose>Initialize a connection</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>resource</type><methodname>gnupg_init</methodname>
   <void />
  </methodsynopsis>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   A GnuPG <type>resource</type> connection used by other GnuPG functions.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Procedural <function>gnupg_init</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$res = gnupg_init();
?>
]]>
    </programlisting>
   </example>
   <example>
    <title>OO gnupg initializer example</title>
    <programlisting role="php">
<![CDATA[
<?php
$gpg = new gnupg();
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
</refentry>

