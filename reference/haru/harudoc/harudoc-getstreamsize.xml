    <member><link linkend="function.harudoc-resetstream"><classname>HaruDoc</classname>::<function>resetStream</function></link></member>
    <member><link linkend="function.harudoc-readfromstream"><classname>HaruDoc</classname>::<function>readFromStream</function></link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

