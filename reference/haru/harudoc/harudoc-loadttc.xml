<refentry xml:id="function.harudoc-loadttc" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HaruDoc::loadTTC</refname>
  <refpurpose>Load the font with the specified index from TTC file</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>HaruDoc::loadTTC</methodname>
   <methodparam><type>string</type><parameter>fontfile</parameter></methodparam>
   <methodparam><type>int</type><parameter>index</parameter></methodparam>
   <methodparam choice="opt"><type>bool</type><parameter>embed</parameter></methodparam>
  </methodsynopsis>
  <para>
   Loads the TrueType font with the specified index from a TrueType collection
   file.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>fontfile</parameter></term>
     <listitem>
      <para>
       The TrueType collection file.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>index</parameter></term>
     <listitem>
      <para>
       The index of the font in the collection file.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>embed</parameter></term>
     <listitem>
      <para>
       When set to &true;, the glyph data of the font is embedded into the PDF
       file, otherwise only the matrix data is included. Defaults to &false;.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the name of the loaded font on success.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Throws <classname>HaruException</classname> on error. 
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><link linkend="function.harudoc-loadttf"><classname>HaruDoc</classname>::<function>loadTTF</function></link></member>
    <member><link linkend="function.harudoc-loadtype1"><classname>HaruDoc</classname>::<function>loadType1</function></link></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

