<refentry xml:id="harudoc.getcurrentpage" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HaruDoc::getCurrentPage</refname>
  <refpurpose>Return current page of the document</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>object</type><methodname>HaruDoc::getCurrentPage</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Get current page of the document. 
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns <classname>HaruPage</classname> instance on success or &false; 
   if there is no current page at the moment.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  &haru.error;
 </refsect1>

</refentry>

