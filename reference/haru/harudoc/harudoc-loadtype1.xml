<refentry xml:id="function.harudoc-loadtype1" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HaruDoc::loadType1</refname>
  <refpurpose>Load Type1 font</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>HaruDoc::loadType1</methodname>
   <methodparam><type>string</type><parameter>afmfile</parameter></methodparam>
   <methodparam choice="opt"><type>string</type><parameter>pfmfile</parameter></methodparam>
  </methodsynopsis>
  <para>
   Loads Type1 font from the given file and registers it in the PDF document.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>afmfile</parameter></term>
     <listitem>
      <para>
       Path to an AFM file.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>pfmfile</parameter></term>
     <listitem>
      <para>
       Path to a PFA/PFB file, optional.
       If it's not set only the glyph data of the font is embedded into the
       PDF document.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the name of the loaded font on success.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Throws <classname>HaruException</classname> on error. 
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><link linkend="function.harudoc-loadttc"><classname>HaruDoc</classname>::<function>loadTTC</function></link></member>
    <member><link linkend="function.harudoc-loadttf"><classname>HaruDoc</classname>::<function>loadTTF</function></link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

