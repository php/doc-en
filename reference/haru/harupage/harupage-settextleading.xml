<refentry xml:id="function.harupage-settextleading" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HaruPage::setTextLeading</refname>
  <refpurpose>Set text leading (line spacing) for the page</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>HaruPage::setTextLeading</methodname>
   <methodparam><type>float</type><parameter>text_leading</parameter></methodparam>
  </methodsynopsis>
  <para>
   Defines line spacing for the page.
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns &true; on success.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Throws <classname>HaruException</classname> on error.
  </para>
 </refsect1>
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><link linkend="function.harupage-gettextleading"><classname>HaruPage</classname>::<function>getTextLeading</function></link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

