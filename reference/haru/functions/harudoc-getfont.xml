<refentry xml:id="function.harudoc-getfont" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HaruDoc::getFont</refname>
  <refpurpose>Get <classname>HaruFont</classname> instance</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>object</type><methodname>HaruDoc::getFont</methodname>
   <methodparam><type>string</type><parameter>fontname</parameter></methodparam>
   <methodparam choice="opt"><type>string</type><parameter>encoding</parameter></methodparam>
  </methodsynopsis>
  <para>
   Creates and returns <classname>HaruFont</classname> instance with the
   specified <parameter>fontname</parameter> and
   <parameter>encoding</parameter>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>fontname</parameter></term>
     <listitem>
      <para>
       The name of the font. See <link linkend="haru.builtin.fonts">Builtin
        Fonts</link> for the list of builtin fonts.
       You can also use the name of a font loaded via
       <link
        linkend="function.harudoc-loadttf"><classname>HaruDoc</classname>::<function>loadTTF</function></link>,
       <link
        linkend="function.harudoc-loadttc"><classname>HaruDoc</classname>::<function>loadTTC</function></link>
       and
       <link
        linkend="function.harudoc-loadtype1"><classname>HaruDoc</classname>::<function>loadType1</function></link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>encoding</parameter></term>
     <listitem>
      <para>
       The encoding to use. See <link linkend="haru.builtin.encodings">Builtin
        Encodings</link> for the list of supported encodings.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Throws <classname>HaruException</classname> on error. 
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><link linkend="function.harupage-setfontandsize"><classname>HaruPage</classname>::<function>setFontAndSize</function></link></member>
    <member><link linkend="function.harupage-getcurrentfont"><classname>HaruPage</classname>::<function>getCurrentFont</function></link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

