<refentry id="function.harupage-getwordspace">
 <refnamediv>
  <refname>HaruPage::getWordSpace</refname>
  <refpurpose>Get the current value of word spacing</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>float</type><methodname>HaruPage::getWordSpace</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Returns the current value of word spacing.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Throws <classname>HaruException</classname> on error.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><link linkend="function.harupage-setwordspace"><classname>HaruPage</classname>::<function>setWordSpace</function></link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

