   &reftitle.examples;
   <para>
    <example>
     <title><classname>SplBool</classname> usage example</title>
     <programlisting role="php">
<![CDATA[
<?php
$true = new SplBool(true);
if ($true) {
    echo "TRUE\n";
}

$false = new SplBool;
if ($false) {
    echo "FALSE\n";
}
?>
]]>
     </programlisting>
     &example.outputs;
     <screen>
<![CDATA[
TRUE
]]>
