<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="uri-rfc3986-uri.withscheme" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>Uri\Rfc3986\Uri::withScheme</refname>
  <refpurpose>Return a new URI instance with a different scheme</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="Uri\\Rfc3986\\Uri">
   <modifier>public</modifier> <type>static</type><methodname>Uri\Rfc3986\Uri::withScheme</methodname>
   <methodparam><type>string|null</type><parameter>scheme</parameter></methodparam>
  </methodsynopsis>
  <para>
   Returns the same instance with the provided scheme value.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>scheme</parameter></term>
    <listitem><para>The scheme to set, or NULL to remove it.</para></listitem>
   </varlistentry>
  </variablelist>
 </refsect1>
</refentry>
