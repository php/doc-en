<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="uri-whatwg-url.resolve" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>Uri\WhatWg\Url::resolve</refname>
  <refpurpose>Resolve a URL string against this instance</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="Uri\\WhatWg\\Url">
   <modifier>public</modifier> <type>static</type><methodname>Uri\WhatWg\Url::resolve</methodname>
   <methodparam><type>string</type><parameter>uri</parameter></methodparam>
   <methodparam choice="opt"><type>array</type><parameter role="reference">softErrors</parameter><initializer>&null;</initializer></methodparam>
  </methodsynopsis>
  <para>
   Resolves the given URL string against this instance and returns the result as a new instance. If the
   <parameter>softErrors</parameter> parameter is provided, it is filled with parse errors and warnings.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>uri</parameter></term>
    <listitem><para>The URL string to resolve.</para></listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>softErrors</parameter></term>
    <listitem><para>If provided, receives an array of parse errors and warnings.</para></listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns a new instance representing the resolved URL.
  </para>
 </refsect1>
</refentry>
