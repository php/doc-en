<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="uri-whatwg-url.withhost" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>Uri\WhatWg\Url::withHost</refname>
  <refpurpose>Return a new instance with a different host</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="Uri\\WhatWg\\Url">
   <modifier>public</modifier> <type>static</type><methodname>Uri\WhatWg\Url::withHost</methodname>
   <methodparam><type>string|null</type><parameter>host</parameter></methodparam>
  </methodsynopsis>
  <para>
   Returns a new instance with the given host.
  </para>
  <para>
   This method is an implementation alias of <classname>Uri\Rfc3986\Uri</classname> <methodname>withHost</methodname>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>host</parameter></term>
    <listitem><para>The new host, or NULL to remove it.</para></listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns a new instance with the updated host.
  </para>
 </refsect1>
</refentry>
