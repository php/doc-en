 &ini.descriptions.title;

 <para>
 <variablelist>
  <varlistentry xml:id="ini.igbinary.compact-strings">
   <term>
    <parameter>igbinary.compact_strings</parameter>
    <type>bool</type>
   </term>
   <listitem>
    <para>
     Enable or disable compacting of duplicate strings.
     The default is On.
    </para>
   </listitem>
  </varlistentry>

  <varlistentry xml:id="ini.igbinary.save-handler">
   <term>
    <parameter>session.save_handler</parameter>
    <type>string</type>
   </term>
   <listitem>
    <para>
     Igbinary is used as session handler by setting this value to <literal>igbinary</literal>.
    </para>
   </listitem>
  </varlistentry>

  </variablelist>
 </para>
