<?xml version="1.0" encoding="utf-8"?>

<refentry xml:id="function.uopz-get-mock" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>uopz_get_mock</refname>
  <refpurpose>Get the current mock for a class</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>mixed</type><methodname>uopz_get_mock</methodname>
   <methodparam><type>string</type><parameter>class</parameter></methodparam>
  </methodsynopsis>
  <para>
   Returns the current mock for <parameter>class</parameter>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>class</parameter></term>
    <listitem>
     <para>
 The name of the mocked class.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>
 <refsect1 role="returnvalues">
    &reftitle.returnvalues;
      <para>
         Either a string containing the name of the mock, or an object,
         or &null; if no mock has been set.
      </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>uopz_get_mock</function> example</title>
   <programlisting role="php">
<![CDATA[
<?php
class A {
    public static function who() {
        echo "A";
    }
}

class mockA {
    public static function who() {
        echo "mockA";
    }
}

uopz_set_mock(A::class, mockA::class);
echo uopz_get_mock(A::class);
?>
]]>
   </programlisting>
   &example.outputs;
   <screen>
<![CDATA[
mockA
]]>
   </screen>
  </example>
 </refsect1>

 <refsect1 role="seealso"><!-- {{{ -->
  &reftitle.seealso;
