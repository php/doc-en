<refentry xml:id="sqlite3.version" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SQLite3::version</refname>
  <refpurpose>
   Returns the SQLite3 library version as a string constant and as a number
  </refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>array</type><methodname>SQLite3::version</methodname>
   <void />
  </methodsynopsis>
  <para>
   Returns the SQLite3 library version as a string constant and as a number.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns an associative array with the keys "versionString" and
   "versionNumber".
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>SQLite3::version</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
print_r(SQLite3::version());
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Array
(
    [versionString] => 3.5.9
    [versionNumber] => 3005009
)
]]>
    </screen>
   </example>
  </para>
 </refsect1>

</refentry>

