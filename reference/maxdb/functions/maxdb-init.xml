<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.maxdb-init">
 <refnamediv>
  <refname>maxdb_init</refname>
  <refpurpose>Initializes MaxDB and returns an resource for use with maxdb_real_connect</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>resource</type><methodname>maxdb_init</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Allocates or initializes a MaxDB resource suitable for
   <function>maxdb_options</function> and <function>maxdb_real_connect</function>.
  </para>
  <note>
   <para>
    Any subsequent calls to any maxdb function (except <function>maxdb_options</function>)
    will fail until <function>maxdb_real_connect</function> was called.
   </para>
  </note>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns an resource.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>maxdb_options</function></member>
    <member><function>maxdb_close</function></member>
    <member><function>maxdb_real_connect</function></member>
    <member><function>maxdb_connect</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

