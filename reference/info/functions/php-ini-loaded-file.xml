<refentry xml:id="function.php-ini-loaded-file" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>php_ini_loaded_file</refname>
  <refpurpose>Retrieve a path to the loaded php.ini file</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>php_ini_loaded_file</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Check if a &php.ini; file is loaded, and retrieve its path.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   The loaded &php.ini; path, or &false; if one is not loaded.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>php_ini_loaded_file</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$inipath = php_ini_loaded_file();

if ($inipath) {
    echo 'Loaded php.ini: ' . $inipath;
} else {
    echo 'A php.ini file is not loaded';
}
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Loaded php.ini: /usr/local/php/php.ini
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>php_ini_scanned_files</function></member>
    <member><function>phpinfo</function></member>
    <member><link linkend="configuration.file">The configuration file</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

