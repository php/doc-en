<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="function.gc-disable" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>gc_disable</refname>
  <refpurpose>Deactivates the circular reference collector</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>void</type><methodname>gc_disable</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Deactivates the circular reference collector, setting
   <link linkend="ini.zend.enable-gc">zend.enable_gc</link> to <literal>0</literal>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.void;
  </para>
 </refsect1>

