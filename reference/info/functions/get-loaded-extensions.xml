 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>get_loaded_extensions</function> Example</title>
    <programlisting role="php">
<![CDATA[
<?php
print_r(get_loaded_extensions());
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
