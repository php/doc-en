<refentry xml:id="function.newt-form-add-components" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>newt_form_add_components</refname>
  <refpurpose>Add several components to the form</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>void</type><methodname>newt_form_add_components</methodname>
   <methodparam><type>resource</type><parameter>form</parameter></methodparam>
   <methodparam><type>array</type><parameter>components</parameter></methodparam>
  </methodsynopsis>
  <para>
   Adds several components to the <parameter>form</parameter>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>form</parameter></term>
     <listitem>
      <para>
       Form to which components will be added
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>components</parameter></term>
     <listitem>
      <para>
       Array of components to add to the form
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.void;
  </para>
 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>A <function>newt_form_add_components</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$form = newt_form();

$b1 = newt_button(5, 12, "Run Tool");
$b2 = newt_button(21, 12, "Quit");

newt_form_add_components($form, array($b1, $b2));
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>newt_form_add_component</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

