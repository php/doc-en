<refentry xml:id="function.tanh" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>tanh</refname>
  <refpurpose>Hyperbolic tangent</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
   <methodsynopsis>
    <type>float</type><methodname>tanh</methodname>
    <methodparam><type>float</type><parameter>arg</parameter></methodparam>
   </methodsynopsis>
  <para>
   Returns the hyperbolic tangent of <parameter>arg</parameter>,
   defined as <literal>sinh(arg)/cosh(arg)</literal>.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>arg</parameter></term>
     <listitem>
      <para>
       The argument to process
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   The hyperbolic tangent of <parameter>arg</parameter>
  </para>
 </refsect1>
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>tan</function></member>
    <member><function>atanh</function></member>
    <member><function>sinh</function></member>
    <member><function>cosh</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

