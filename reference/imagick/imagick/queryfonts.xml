<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.imagick-queryfonts">
 <refnamediv>
  <refname>Imagick::queryFonts</refname>
  <refpurpose>Returns the configured fonts</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>array</type><methodname>Imagick::queryFonts</methodname>
   <methodparam choice="opt"><type>string</type><parameter>pattern</parameter><initializer>"*"</initializer></methodparam>
  </methodsynopsis>
  &warn.undocumented.func;
  <para>
   Returns the configured fonts.
  </para>
 </refsect1>
 
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>pattern</parameter></term>
     <listitem>
      <para>
       The query pattern
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
  
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns an array containing the configured fonts.
   &imagick.imagickexception.throw;
  </para>
 </refsect1>
 
</refentry>

