<refentry xmlns="http://docbook.org/ns/docbook" xml:id="imagick.getfont">
 <refnamediv>
  <refname>Imagick::getFont</refname>
  <refpurpose>Gets font</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>Imagick::getFont</methodname>
   <void />
  </methodsynopsis>
  <para>
   Returns the objects font property.
   &imagick.method.available.0x637;
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the string containing the font name or &false; if not font is set.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>Imagick::setFont</function></member>
    <member><function>ImagickDraw::setFont</function></member>
    <member><function>ImagickDraw::getFont</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

