<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.imagickdraw-rectangle">
 <refnamediv>
  <refname>ImagickDraw::rectangle</refname>
  <refpurpose>Draws a rectangle</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>ImagickDraw::rectangle</methodname>
   <methodparam><type>float</type><parameter>x1</parameter></methodparam>
   <methodparam><type>float</type><parameter>y1</parameter></methodparam>
   <methodparam><type>float</type><parameter>x2</parameter></methodparam>
   <methodparam><type>float</type><parameter>y2</parameter></methodparam>
  </methodsynopsis>
  &warn.undocumented.func;
  <para>
   Draws a rectangle given two coordinates and using the current stroke,
   stroke width, and fill settings.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>x1</parameter></term>
     <listitem>
      <para>
       x coordinate of the top left corner
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>y1</parameter></term>
     <listitem>
      <para>
       y coordinate of the top left corner
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>x2</parameter></term>
     <listitem>
      <para>
       x coordinate of the bottom right corner
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>y2</parameter></term>
     <listitem>
      <para>
       y coordinate of the bottom right corner
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>

 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.void;
  </para>
 </refsect1>

</refentry>

