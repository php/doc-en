<refentry xml:id="sphinxclient.setidrange" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SphinxClient::setIDRange</refname>
  <refpurpose>Set a range of accepted document IDs</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>SphinxClient::setIDRange</methodname>
   <methodparam><type>int</type><parameter>min</parameter></methodparam>
   <methodparam><type>int</type><parameter>max</parameter></methodparam>
  </methodsynopsis>
  <para>
   Sets an accepted range of document IDs. Default range is from 0 to 0, i.e.
   no limit. Only those records that have document ID between
   <parameter>min</parameter> and <parameter>max</parameter> 
   (including IDs exactly equal to <parameter>min</parameter> or
   <parameter>max</parameter>) will be matched.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
   <para>
   <variablelist>
    <varlistentry>
     <term><parameter>min</parameter></term>
     <listitem>
      <para>
       Minimum ID value.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>max</parameter></term>
     <listitem>
      <para>
       Maximum ID value.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

</refentry>

