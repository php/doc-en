<refentry xml:id="sphinxclient.getlasterror" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SphinxClient::getLastError</refname>
  <refpurpose>Get the last error message</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>string</type><methodname>SphinxClient::getLastError</methodname>
   <void />
  </methodsynopsis>
  <para>
   Returns string with the last error message. If there were no errors during
   the previous API call, empty string is returned. This method doesn't reset
   the error message, so you can safely call it several times.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the last error message or an empty string if there were no errors.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><xref linkend="sphinxclient.getlastwarning" /></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

