 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>strtoupper</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$str = "Mary Had A Little Lamb and She LOVED It So";
$str = strtoupper($str);
echo $str; // Prints MARY HAD A LITTLE LAMB AND SHE LOVED IT SO
?>
]]>
    </programlisting>
   </example>   
  </para>
 </refsect1>

