 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>strcasecmp</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$var1 = "Hello";
$var2 = "hello";
if (strcasecmp($var1, $var2) == 0) {
    echo '$var1 is equal to $var2 in a case-insensitive string comparison';
}
?>
]]>
    </programlisting>
   </example>   
  </para>
 </refsect1>

