 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>convert_uuencode</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$some_string = "test\ntext text\r\n";

echo convert_uuencode($some_string);
?>
]]>
    </programlisting>
    &example.outputs;
