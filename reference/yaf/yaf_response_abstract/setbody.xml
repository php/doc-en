<refentry xml:id="yaf-response-abstract.setbody" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>Yaf_Response_Abstract::setBody</refname>
  <refpurpose>Set content to response</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>Yaf_Response_Abstract::setBody</methodname>
   <methodparam><type>string</type><parameter>content</parameter></methodparam>
   <methodparam choice="opt"><type>string</type><parameter>key</parameter></methodparam>
  </methodsynopsis>
  <para>
   Set content to response
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>body</parameter></term>
    <listitem>
     <para>
      content string
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>key</parameter></term>
    <listitem>
     <para>
      the content key, you can set a content with a key, if you don't
      specific, then Yaf_Response_Abstract::DEFAULT_BODY will be used
      <note>
       <para>
       this parameter is introduced as of 2.2.0
      </para>
      </note>
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>

  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>Yaf_Response_Abstract::setBody</function>example</title>
   <programlisting role="php">
<![CDATA[
<?php
$response = new Yaf_Response_Http();

$response->setBody("Hello")->setBody(" World", "footer");

print_r($response);
echo $response;
?>
]]>
   </programlisting>
   &example.outputs.similar;
   <screen>
<![CDATA[
Yaf_Response_Http Object
(
    [_header:protected] => Array
        (
        )

    [_body:protected] => Array
        (
            [content] => Hello
            [footer] =>  World
        )

    [_sendheader:protected] => 1
    [_response_code:protected] => 200
)
Hello World
]]>
   </screen>
  </example>
 </refsect1>

