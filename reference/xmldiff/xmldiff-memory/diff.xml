<refentry xml:id="xmldiff-memory.diff" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>XMLDiff\Memory::diff</refname>
  <refpurpose>Diff two XML documents</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>string</type><methodname>XMLDiff\Memory::diff</methodname>
   <methodparam><type>string</type><parameter>from</parameter></methodparam>
   <methodparam><type>string</type><parameter>to</parameter></methodparam>
  </methodsynopsis>
  <para>
   Diff two strings containing XML documents and produce the diff information.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>from</parameter></term>
    <listitem>
     <para>
      Source XML document.
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>to</parameter></term>
    <listitem>
     <para>
      Target XML document.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   String with the XML document containing the diff information or NULL.
  </para>
 </refsect1>


</refentry>

