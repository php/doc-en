<refentry xml:id="xmldiff-file.merge" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>XMLDiff\File::merge</refname>
  <refpurpose>Produce merged XML document</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>string</type><methodname>XMLDiff\File::merge</methodname>
   <methodparam><type>string</type><parameter>src</parameter></methodparam>
   <methodparam><type>string</type><parameter>diff</parameter></methodparam>
  </methodsynopsis>
  <para>
   Create new XML document based on diffs and source document.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>src</parameter></term>
    <listitem>
     <para>
      Path to the source XML document.
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>diff</parameter></term>
    <listitem>
     <para>
      Path to the XML document with the diff information.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   String with the new XML document or NULL. 
  </para>
 </refsect1>


</refentry>

