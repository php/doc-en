  <para>
   <example>
    <title>Using <function>http_negotiate_language</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$langs = array(
        'en-US',// default
        'fr',
        'fr-FR',
        'de',
        'de-DE',
        'de-AT',
