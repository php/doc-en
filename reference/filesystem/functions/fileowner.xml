<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.fileowner">
 <refnamediv>
  <refname>fileowner</refname>
  <refpurpose>Gets file owner</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type class="union"><type>int</type><type>false</type></type><methodname>fileowner</methodname>
   <methodparam><type>string</type><parameter>filename</parameter></methodparam>
  </methodsynopsis>
  <para>
   Gets the file owner.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>filename</parameter></term>
     <listitem>
      <para>
       Path to the file.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the user ID of the owner of the file, &return.falseforfailure;.
   The user ID is returned in numerical format, use
   <function>posix_getpwuid</function> to resolve it to a username.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  &fs.emits.warning.on.failure;
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Finding the owner of a file</title>
    <programlisting role="php">
<![CDATA[
<?php
$filename = 'index.php';
print_r(posix_getpwuid(fileowner($filename)));
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="notes">
  &reftitle.notes;
  &note.clearstatcache;
  &tip.fopen-wrapper.stat;
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>filegroup</function></member>
    <member><function>stat</function></member>
    <member><function>posix_getpwuid</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

