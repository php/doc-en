   <example>
    <title><function>linkinfo</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php

echo linkinfo('/vmlinuz'); // 835

?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

