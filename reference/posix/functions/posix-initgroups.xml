<refentry xml:id="function.posix-initgroups" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>posix_initgroups</refname>
  <refpurpose>Calculate the group access list</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>posix_initgroups</methodname>
   <methodparam><type>string</type><parameter>username</parameter></methodparam>
   <methodparam><type>int</type><parameter>group_id</parameter></methodparam>
  </methodsynopsis>
  <para>
   Calculates the group access list for the user specified in name.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>username</parameter></term>
     <listitem>
      <para>
       The user to calculate the list for.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>group_id</parameter></term>
     <listitem>
      <para>
       Typically the group number from the password file.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member>The Unix manual page for initgroups(3).</member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
