     <term>
      <varname>pid</varname>
     </term>
     <listitem>
      <para>
       <emphasis>Readonly</emphasis>
       . The process ID this watcher watches out for, or
       <literal>0</literal>
       , meaning any process ID.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="evchild.props.rpid">
     <term>
      <varname>rpid</varname>
     </term>
     <listitem>
      <para>
       <emphasis>Readonly</emphasis>
