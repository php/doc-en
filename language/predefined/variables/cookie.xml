<phpdoc:varentry xmlns:phpdoc="http://php.net/ns/phpdoc" xml:id="reserved.variables.cookies" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>$_COOKIE</refname>
  <refpurpose>HTTP Cookies</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <para>
   An associative <type>array</type> of variables passed to the current script
   via HTTP Cookies. 
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example xml:id="variable.cookie.basic">
    <title><varname>$_COOKIE</varname> example</title>
    <programlisting role="php">
<![CDATA[
<?php
echo 'Hello ' . htmlspecialchars($_COOKIE["name"]) . '!';
?>
]]>
    </programlisting>
    <simpara>
     Assuming the "name" cookie has been set earlier
    </simpara>
    &example.outputs.similar;
    <screen>
<![CDATA[
Hello Hannes!
]]>
    </screen>
   </example>
  </para>
 </refsect1>
 
 <refsect1 role="notes">
  &reftitle.notes;
  &note.is-superglobal;
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>setcookie</function></member>
    <member><link linkend="language.variables.external">Handling external variables</link></member>
    <member><link linkend="book.filter">The filter extension</link></member>
   </simplelist>
  </para>
 </refsect1>

</phpdoc:varentry>
 
