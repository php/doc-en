 <refsect1 role="description"><!-- {{{ -->
  &reftitle.description;
  <para>
   <!-- TODO Proper description -->
   The <filename>data:</filename> (<link xlink:href="&url.rfc;2397">RFC
   2397</link>) stream wrapper.
  </para>
 </refsect1><!-- }}} -->

