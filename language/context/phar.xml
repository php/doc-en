<refentry xml:id="context.phar" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" annotations="verify_info:false" role="stream_context_option">
 <refnamediv>
  <refname>Phar context options</refname>
  <refpurpose>Phar context option listing</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <para>
   Context options for <literal>phar://</literal> wrapper.
  </para>
 </refsect1>

 <refsect1 role="options"><!-- {{{ -->
  &reftitle.options;
  <para>
   <variablelist>
    <varlistentry xml:id="context.phar.compress">
     <term>
      <parameter>compress</parameter>
      <type>int</type>
     </term>
     <listitem>
      <para>
       One of <link linkend="phar.constants.compression">Phar compression constants</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.phar.metadata">
     <term>
      <parameter>metadata</parameter>
      <type>mixed</type>
     </term>
     <listitem>
      <para>
       Phar metadata. See <function>Phar::setMetadata</function>.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1><!-- }}} -->

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><xref linkend="wrappers.phar" /></member>
    <member><link linkend="phar.using.stream">Phar stream wrapper</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

